<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img_language"
        android:layout_width="@dimen/swipe_image"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"

        />

    <LinearLayout
        android:id="@+id/lyt_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/img_language"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/txt_Echoosel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estr_eng"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txt_Hchoosel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hstr_hindi"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >

            <TextView
                android:id="@+id/txt_english"

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/str_english"
                android:textSize="50sp"
                android:textColor="@color/fadedAccent"/>

            <ImageView
                android:id="@+id/img_eselect"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_hindi"

                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/str_hindi"
                android:textSize="50sp"
                android:textColor="@color/fadedAccent"/>

            <ImageView
                android:id="@+id/img_hselect"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bluegradient"
        android:text="start !!"
        android:textSize="20sp"
        android:textColor="@color/whiteText"
        android:visibility="gone"/>


</RelativeLayout>