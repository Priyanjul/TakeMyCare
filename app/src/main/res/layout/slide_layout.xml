<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/swipe_image"
        android:layout_height="@dimen/swipe_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        app:srcCompat="@drawable/ic_wswipe1" />

    <TextView
        android:id="@+id/txt_title"
        android:textColor="@color/whiteText"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        android:text="Home Delivery, No Hassle !" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:gravity="center"
        android:textColor="@color/whiteText"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Something regarding home delivery of medicines
        which relevant and amazing" />
</RelativeLayout>